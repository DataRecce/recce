{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@theme/*": ["./theme/*"],
      "@datarecce/ui": ["./packages/ui/src/index.ts"],
      "@datarecce/ui/*": ["./packages/ui/src/*"]
    },
    "downlevelIteration": true,
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": [
    "next-env.d.ts",
    "jest.globals.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "eslint.config.mjs",
    ".next/dev/types/**/*.ts",
    "./jest.setup.ts",
    "packages/ui/src/**/*.ts",
    "packages/ui/src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
